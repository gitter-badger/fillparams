#!/usr/bin/env ruby

require 'optparse'
require 'ostruct'

options = OpenStruct.new
options.config_file = []
options.verbose = false

OptionParser.new do |opts|
  opts.banner = "Usage: fill_params [-f config.yml] [-v]"

  opts.on("-v", "--[no-]verbose", "Run verbosely") do |v|
    options.verbose = v
  end
end